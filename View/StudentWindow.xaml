                            <DataGrid.Columns>

                                <DataGridTextColumn Header="Bodovi Ispit" Binding="{Binding BodoviIspit}" Width="*" />
                                <DataGridTextColumn Header="Ocjena Ispit" Binding="{Binding OcjenaIspit}" Width="*" />
